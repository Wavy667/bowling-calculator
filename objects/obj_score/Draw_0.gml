///           ///
// DRAW FRAMES //
///           ///
for (var i = 0; i < current_frame+1; i++) {
	
	// draw first roll
	if (global.roll[frame[i].roll1] == 10) {
		draw_text(64*i, 32, "X");
	} else {
		draw_text(64*i, 32, global.roll[frame[i].roll1]);
	}
	
	// draw second roll
	if (global.roll[frame[i].roll1] == 10 && i != 9) {
		draw_text(16+(64*i), 32, "-");
	} else if (global.roll[frame[i].roll2] == 10 && i == 9) {
		draw_text(16+(64*i), 32, "X");
	} else if (global.roll[frame[i].roll1] + global.roll[frame[i].roll2] == 10 && global.roll[frame[i].roll1] != 10) {
		draw_text(16+(64*i), 32, "/");
	} else {
		draw_text(16+(64*i), 32, global.roll[frame[i].roll2]);
	}
	
	// draw third roll for frame 10
	if (i == 9) {
		if (global.roll[frame[i].roll3] == 10) {
			draw_text(32+(64*i), 32, "X");
		} else if (global.roll[frame[i].roll2] + global.roll[frame[i].roll3] == 10 && global.roll[frame[i].roll2] != 10) {
			draw_text(32+(64*i), 32, "/");
		} else {
			draw_text(32+(64*i), 32, global.roll[frame[i].roll3]);
		}
	}
	
	// draw total
	if ((i != current_frame && frame[i].total != -1) || frame_roll > 2) {
		draw_text(64*i, 64, frame[i].total);
	}
}











































































































































































































































































































































































